<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="TestForge Full Suite" verbose="2" parallel="false" thread-count="4">

    <!-- Smoke Tests -->
    <test name="Smoke Tests">
        <packages>
            <package name="uitest.auth"/>
            <package name="uitest.navigation"/>
        </packages>
    </test>

    <!-- Regression Tests -->
    <test name="Regression Tests">
        <packages>
            <package name="uitest.auth"/>
            <package name="uitest.cart"/>
            <package name="uitest.checkout"/>
            <package name="uitest.products"/>
            <package name="uitest.categories"/>
        </packages>
    </test>

    <!-- API Tests -->
    <test name="API Tests">
        <packages>
            <package name="apitest"/>
        </packages>
    </test>

    <!-- Visual Validation Tests -->
    <test name="UI Validation Tests">
        <packages>
            <package name="uitest.visual"/>
        </packages>
    </test>

</suite>
